<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="come.newbula.xing.ui.login.LoginActivity">
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="取消"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不行不精彩"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机登录"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLength="11"
        android:background="@drawable/ed_drawable"
        android:hint="输入手机号码"
        android:inputType="phone"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="center"
        />
    <RelativeLayout
        android:id="@+id/rl_qitadenglv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_qita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/img_qq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/zhao_qq"
            android:layout_below="@+id/tv_qita"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:id="@+id/img_weix"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/zhao_weix"
            android:layout_below="@+id/tv_qita"
            android:layout_toLeftOf="@+id/img_qq"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:id="@+id/img_weibo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/zhao_weibo"
            android:layout_below="@+id/tv_qita"
            android:layout_toRightOf="@+id/img_qq"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续表示你同意"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_xiabixieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 虾比用户协议"
                android:layout_toRightOf="@+id/tv_xieyi"
                android:textSize="12sp"
                android:textColor="@color/color_CF5730"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_jinru"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/go"
            android:layout_below="@+id/rl_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
</LinearLayout>
