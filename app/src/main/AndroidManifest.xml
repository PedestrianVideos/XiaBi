        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".ui.homepage.HomeFragmentActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        //添加好友
        <activity
            android:name=".ui.personinfo.activity.AddFriendActivity"
            android:screenOrientation="portrait" />
        //我的通讯录
        <activity
            android:name=".ui.personinfo.activity.MailListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.PersonalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.SetUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.NewsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.FansActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.FabulousActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.personinfo.activity.MineActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.login.activity.LoginPasswordActivity" />
        <activity android:name=".ui.login.activity.FindPasswordActivity" />
        <activity android:name=".ui.login.activity.RegisterActivity"></activity>

        <!-- 搜索-->
        <activity
            android:name=".ui.findchallenge.activity.SearchActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>
    </application>

</manifest>